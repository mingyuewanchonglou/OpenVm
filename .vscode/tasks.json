{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make",
            "type": "cppbuild",
            "command": "gcc",
            "args": [
                "(ls *.c)",
                "-o",
                "${workspaceRoot}/debug/openvm",
                "-g",
                "-Wall"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Make."
        },
        {
            "label": "clean",
            "command":"make",
            "args": [
                "clean"
            ]
        },
    ]
}